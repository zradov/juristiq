{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudFormationBootstrap",
      "Effect": "Allow",
      "Action": [
        "cloudformation:CreateStack",
        "cloudformation:UpdateStack",
        "cloudformation:DeleteStack",
        "cloudformation:CreateChangeSet",
        "cloudformation:DescribeChangeSet",
        "cloudformation:DeleteChangeSet",
        "cloudformation:ExecuteChangeSet",
        "cloudformation:DescribeStacks",
        "cloudformation:DescribeStackEvents",
        "cloudformation:DescribeStackResources",
        "cloudformation:GetTemplate"
      ],
      "Resource": "arn:aws:cloudformation:{Aws.REGION}:{Aws.ACCOUNT_ID}:stack/CDKToolkit/*"
    },
    {
      "Sid": "S3BootstrapBucket",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:DeleteBucket",
        "s3:PutBucketPolicy",
        "s3:GetBucketPolicy",
        "s3:DeleteBucketPolicy",
        "s3:PutBucketAcl",
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:PutLifecycleConfiguration",
        "s3:PutEncryptionConfiguration",
        "s3:PutBucketPublicAccessBlock",
        "s3:PutBucketVersioning"
      ],
      "Resource": [
        "arn:aws:s3:::cdk-*-assets-{Aws.ACCOUNT_ID}-{Aws.REGION}"
      ]
    },
    {
      "Action": [
          "ssm:DeleteParameter",
          "ssm:GetParameter",
          "ssm:GetParameters",
          "ssm:PutParameter"
      ],
      "Effect": "Allow",
      "Resource": [
          "arn:aws:ssm:{Aws.REGION}:{Aws.ACCOUNT_ID}:parameter/cdk-bootstrap/*"
      ]
    },
    {
      "Sid": "ECRBootstrapRepo",
      "Effect": "Allow",
      "Action": [
        "ecr:CreateRepository",
        "ecr:DescribeRepositories",
        "ecr:SetRepositoryPolicy",
        "ecr:PutLifecyclePolicy",
        "ecr:DeleteRepository"
      ],
      "Resource": "arn:aws:ecr:{Aws.REGION}:{Aws.ACCOUNT_ID}:repository/cdk-*"
    },
    {
      "Sid": "IAMBootstrapRoles",
      "Effect": "Allow",
      "Action": [
        "iam:GetRole",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:CreatePolicy",
        "iam:PutRolePolicy",
        "iam:GetRolePolicy",
        "iam:AttachRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:DetachRolePolicy",
        "iam:PassRole",
        "iam:TagRole"
      ],
      "Resource": [
        "arn:aws:iam::{Aws.ACCOUNT_ID}:role/cdk-*",
        "arn:aws:iam::{Aws.ACCOUNT_ID}:policy/cdk-*"
      ]
    },
    {
      "Sid": "STSAssumeBootstrapRoles",
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": "arn:aws:iam::{Aws.ACCOUNT_ID}:role/cdk-*"
    }
  ]
}
